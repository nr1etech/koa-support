{
  "name": "@nr1e/koa-support",
  "description": "Supporting middleware and functionality for use with KOA",
  "version": "0.0.1-alpha.7",
  "type": "module",
  "author": "NR1E, Inc.",
  "publishConfig": {
    "access": "public"
  },
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/nr1etech/koa-support.git"
  },
  "files": [
    "**"
  ],
  "scripts": {
    "build": "tsc",
    "postbuild": "prettier --check . && gts lint && cp package.json dist",
    "watch": "tsc -w",
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --coverage --collectCoverageFrom='src/**/*.{ts,tsx}'",
    "lint": "gts lint",
    "clean": "rm -rf dist && rm -rf site && rm -rf coverage",
    "fix": "gts fix",
    "makepretty": "prettier --write .",
    "site": "typedoc --out site \"src/**/*.ts\" --exclude \"src/**/*.test.ts\""
  },
  "devDependencies": {
    "@types/co-body": "^6.1.3",
    "@types/jest": "^29.5.10",
    "@types/koa": "^2.14.0",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/node": "20.8.2",
    "gts": "^5.2.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.6",
    "typescript": "~5.1.6"
  },
  "dependencies": {
    "@koa/bodyparser": "^5.0.0",
    "@koa/cors": "^5.0.0",
    "@koa/router": "^12.0.1",
    "@nr1e/commons": "^0.0.3",
    "@nr1e/logging": "^0.0.5",
    "jose": "^5.2.1",
    "koa": "^2.15.0",
    "serverless-http": "^3.2.0",
    "tslib": "^2.6.2"
  },
  "peerDependencies": {
    "@koa/bodyparser": ">=5.0.0",
    "@koa/cors": ">=5.0.0",
    "@koa/router": ">=12.0.1",
    "@nr1e/commons": ">=0.0.3",
    "@nr1e/logging": ">=0.0.5",
    "koa": ">= 2.15.0"
  },
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./index.d.ts"
    }
  }
}
